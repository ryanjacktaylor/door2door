<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    android:paddingTop="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
        <ImageView
            android:id="@+id/sale_item_imageview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/no_image_icon"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/sale_item_name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="Some Item"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Qty: "
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/sale_item_qty_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>


        <TextView
            android:id="@+id/sale_item_price_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$100.00"
            android:textColor="#000000"
            android:textSize="24sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#AAAAAA">
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/recycler_view_inventory_edit_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/recycler_view_inventory_delete_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DELETE"
                android:textColor="@color/bs_red"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:textAlignment="center"
                android:paddingTop="10dp"/>

            <RelativeLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#AAAAAA"
                android:layout_marginTop="5dp">
            </RelativeLayout>

            <TextView
                android:id="@+id/recycler_view_inventory_edit_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EDIT"
                android:textColor="@color/bs_blue"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:textAlignment="center"
                android:paddingTop="10dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>